<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stripes"
        android:orientation="vertical"
        tools:context="com.example.marry.myapplication.MainActivity">


        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center_horizontal"-->
        <!--android:orientation="vertical">-->

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="100sp"-->
        <!--android:paddingBottom="8dp"-->
        <!--android:paddingTop="8dp"-->
        <!--android:scaleType="centerInside"-->
        <!--android:src="@drawable/bakery" />-->
        <!--</LinearLayout>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@color/background"
            android:text="@string/title"
            android:textAlignment="center"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/textSize"
            android:textStyle="bold|italic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_height"
            android:src="@drawable/brutaria" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin">


            <ImageView
                android:id="@+id/location"
                android:layout_width="@dimen/image_dim"
                android:layout_height="@dimen/image_dim"
                android:layout_marginRight="@dimen/layout_margin"
                android:src="@drawable/location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/location"
                android:text="@string/adress"
                android:textColor="@color/textColor"
                android:textSize="@dimen/teSize"
                android:textStyle="bold|italic" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/layout_margin"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin">

            <ImageView
                android:id="@+id/clock"
                android:layout_width="@dimen/image_dim"
                android:layout_height="@dimen/image_dim"
                android:layout_marginRight="@dimen/layout_margin"
                android:src="@drawable/clock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/clock"
                android:text="@string/hours"
                android:textColor="@color/textColor"
                android:textSize="@dimen/teSize"
                android:textStyle="bold|italic" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginBottom="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:textColor="@color/descrColor"
            android:textSize="@dimen/textSize"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:text="@string/motto"
            android:textAlignment="center"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/textSize"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>



